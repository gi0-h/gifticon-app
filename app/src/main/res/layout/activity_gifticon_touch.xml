<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gifticon_touch_activity">


    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview_input_img_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/name_text_touch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView_gifticon_touch"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/round"
            android:backgroundTint="#F4F4EF"
            android:onClick="mOnclick"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="OnClick,SpeakableTextPresentCheck" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/name_text_touch"
        android:layout_width="271dp"
        android:layout_height="72dp"
        android:fontFamily="@font/bmhananapro"
        android:text="입력한 기프티콘 이름"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/date_text_touch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/date_text_touch"
        android:layout_width="245dp"
        android:layout_height="72dp"
        android:fontFamily="@font/bmhananapro"
        android:text="입력한 날짜"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/date_d_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

    <TextView
        android:id="@+id/date_d_day"
        android:layout_width="252dp"
        android:layout_height="75dp"
        android:fontFamily="@font/bmhananapro"
        android:text="D-Day"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gifticon_cancellation_button_touch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958">

    </TextView>

    <Button
        android:id="@+id/gifticon_cancellation_button_touch"
        android:layout_width="154dp"
        android:layout_height="72dp"
        android:background="@drawable/round"
        android:backgroundTint="#FFEB3B"
        android:fontFamily="@font/bmhananapro"
        android:text="돌아가기"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

</androidx.constraintlayout.widget.ConstraintLayout>